/* 总界面样式 */
.container{
  background: #efefef;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  color:black;
  font-size: 18px;
}


/* 未登录状态页面样式 */
.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
}

.content {
  justify-content: center;
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}

/* 登录后界面样式 */
.shareTop{
  margin: 1px auto;
  width: 98%;
  display: flex;
  justify-items: center;
  flex-direction:row-reverse;
  background-color: white;
  border-radius: 8px;
}
.shareTop .btn
{
  width: 80px;
  height: 30px;
  line-height: 30px;
  border-radius: 25px;
  text-align: center;
  font-weight: 550;
  margin: 10px;
}
.shareBnt1{
  border: #9d9d9d 1px solid;
  background-color: #f7f7f7;
}
.shareBtn2{
  background-color: #fb9d39;
}

.shareBody
{
  margin: 2% auto;
  width: 98%;
  height: 55%;
  background-color: white;
  border-radius: 8px;
}

.shareLocal
{
  margin: 3% auto;
  width: 98%;
