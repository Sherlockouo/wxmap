<view class="top" style="height:{{vaHe}}px">
  <view class="deBack">
    <view bindtap="deback">
      <image src="/img/left-arrow.png"></image>
    </view>
  </view>
  <view class="allmessage">
    <view class="deMessage">
      <view class="outimg" style="height:{{vaHe}}px">
        <view class="inimg" mode="widthFix" bindtap="gousermessage">
          <image src="{{headimg}}"></image>
        </view>
      </view>
      <view class="dname" style="height:{{vaHe}}px; line-height:{{vaHe}}px;text-align:center">{{uesrname}}</view>
    </view>
    <view wx:if="{{!isyouself}}">
      <view class="concern">
        <!-- 点击关注可以变化 -->
        <view class="inconcern {{concernAc==0?'active':''}}" bindtap="concern">{{isconcern}}</view>
      </view>
    </view>
    <view wx:else>
      <view class="control"></view>
    </view>
  </view>

</view>

<view class="container-layout">
  <swiper class="container" indicator-dots="{{indicatordots}}" autoplay="{{autoplay}}" interval="{{interval}}"
    duration="{{duration}}" bindchange='onSlideChange'>
    <block wx:for="{{essayall.imgUrls}}" wx:key="index">
      <swiper-item class="vol-swiper-item" bindchange="">
        <view class="vol-card">
          <image class="vol-picture" src="{{item}}" mode="aspectFill" bindtap='imgClick' data-num="{{index}}"></image>
        </view>
      </swiper-item>

    </block>
  </swiper>
  <view class='bannerNum'>{{(current+1)}}/{{essayall.imgUrls.length}}</view>
  <view class="container-text">
    <view class="title">{{essayall.essay_title}}</view>
    <scroll-view scroll-x="true">
      <view class="tabel" scroll-x="true">
        <block wx:for="{{essayall.tabel}}">
          <view class="tabeltext">
            <view>{{item}}</view>
          </view>
        </block>
      </view>
    </scroll-view>
    <view class="divLine"></view>
    <view class="essay">{{essayall.essay_text}}</view>
    <view class="data"><text>发布时间：</text>{{essayall.sharetime}}</view>
  </view>
  <view class="empty"></view>
  <view class="bbbox">
    <view class="bottom">
      <view class="share">
        <!-- <button>分享</button> -->
        <button open-type='share' class='btn1'>
          <image class='btnImg' src='/img/shareico_h.png'></image>
          <!-- <view>联系客服</view> -->
        </button>
      </view>
      <view class="boconcern" bindtap="docollect">
        <view class="inbconcern">
          <view class="conimg">
              <image src="{{hoardimg}}"></image>
          </view>
          <view class="context">{{essayall.concern}}</view>
        </view>
      </view>
      <view class="like" bindtap="dolike">
        <view class="inlike">
        <view class="likeimg">
          <image src="{{likeimg}}"></image>
        </view>
        <view class="liketext">{{essayall.like}}</view>
      </view>
    </view>
    </view>
  </view>
</view>